{
  "name": "nexus-mvp",
  "version": "0.1.0",
  "description": "NEXUS MVP - An MCP-first desktop application built with Electron",
  "main": "dist/main/main.js",
  "homepage": "./",
  "private": true,
  "type": "module",
  "author": {
    "name": "Nexus Team"
  },
  "license": "MIT",
  "keywords": [
    "electron",
    "mcp",
    "ai",
    "desktop",
    "typescript",
    "react"
  ],
  "scripts": {
    "dev": "node scripts/start-dev.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "npm run clean && tsc -p tsconfig.main.json && node scripts/rename-preload.js",
    "dist": "electron-builder",
    "dist:dir": "electron-builder --dir",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@expo/sudo-prompt": "^9.3.2",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.0",
    "winston": "^3.11.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/prismjs": "^1.26.3",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.2",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6",
    "ts-jest": "^29.4.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.8",
    "vitest": "^3.2.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.nexus.mvp",
    "productName": "Nexus MVP",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
